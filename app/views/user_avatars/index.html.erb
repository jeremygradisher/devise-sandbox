<% if current_user %>
<p id="notice"><%= notice %></p>

<h1>User Avatars</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th width="100">Avatar id:</th>
      <th width="100">Avatar:</th>
      <th>Actions:</th>
    </tr>
  </thead>

  <tbody>
    <% @user_avatars.each do |user_avatar| %>
      <tr>
        <td><%= user_avatar.id %></td>
        <td><%= link_to image_tag(user_avatar.avatar_url, :style => 'max-width:50px;max-height:50px;padding:2px;', :class => ''), user_avatar %></td>
        
        <td><%= link_to 'Show', user_avatar, :class => 'btn btn-default' %>
        
        <% if current_user.is_admin? || current_user.id == user_avatar.user.id %>
        <%= link_to 'Edit', edit_user_avatar_path(user_avatar), :class => 'btn btn-primary' %>
        <%= link_to 'Delete Avatar', user_avatar, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', root_path, :class => 'btn btn-default' %>


<% else %>
 <h2>Must be logged in. <a href="/" class="btn btn-default">Return Home</a></h2>
<% end %>